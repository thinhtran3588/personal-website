rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // üö´ Default: deny everything
    match /{document=**} {
      allow read, write: if false;
    }

    // ‚úÖ User settings: document ID == user UID
    match /user-settings/{userId} {

      // Create own settings document
      allow create: if isSignedIn()
        && isOwner(userId)
        && !exists(/databases/$(database)/documents/user-settings/$(userId));

      // Read own settings
      allow read: if isSignedIn() && isOwner(userId);

      // Update own settings
      allow update: if isSignedIn() && isOwner(userId);

      // ‚ùå No delete from client
      allow delete: if false;
    }

    // ‚úÖ Books: each user can only manage their own books (subcollection)
    match /users/{userId}/books/{bookId} {
      allow read: if isSignedIn() && isOwner(userId);

      allow create: if isSignedIn()
        && request.auth.uid == userId
        && request.resource.data.createdBy == request.auth.uid;

      allow update: if isSignedIn()
        && request.auth.uid == userId
        && request.resource.data.createdBy == resource.data.createdBy;

      allow delete: if isSignedIn() && isOwner(userId);
    }

    // üîß Helpers
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
  }
}
